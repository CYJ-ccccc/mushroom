/**app.wxss**/
.home-wrap {
  padding: 10rpx 32rpx;
  position: relative;
}

.search-area {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.search-icon,
.input {
  display: inline-block;

}

.search-icon {
  width: 56rpx;
  height: 56rpx;
}

.search-icon image {
  width: 100%;
  height: 100%;
}

.swiper,
.recom {
  margin-bottom: 40rpx;
}
.swiper swiper{
  width: 100%;
  height: 340rpx;
}
swiper .swiper-item {
  width: 100%;
  overflow: hidden;
  border-radius: 10px;
}

swiper .swiper-item image {
  width: 100%;
}

.recom-title {
  display: flex;
  justify-content: space-between;
}
.recom-title image {
  width: 48rpx;
  height: 48rpx;
}

.recom-title text {
  font-size: 38rpx;
  font-weight: bold;
}

.page-section-spacing {
  margin-top: 34rpx;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item_H {
  display: inline-block;
  width: 296rpx;
  height: 168rpx;
  background: linear-gradient(225deg, rgba(151, 235, 170, 1) 0%, rgba(40, 193, 110, 1) 100%);
  opacity: 1;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.scroll-view-item_H image {
  width: 100%;
  height: 100%;
}

.hot-title {
  margin-bottom: 38rpx;
}

.hot-title text {
  font-size: 38rpx;
  font-weight: bold;
}

.hot-content {
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
}

.hot-item {
  width: 324rpx;
  height: 296rpx;
  border-radius: 6px;
  overflow: hidden;
  margin-bottom: 14rpx;
}

.hot-item navigator {
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.hot-item navigator image {
  width: 100%;
  height: 100%;
}

.depict {
  display: block;
  font-size: 26rpx;
  margin-top: 12rpx;
  color: rgba(38, 38, 38, 1);
}

.isRead {
  font-size: 18rpx;
  color: rgba(149, 149, 149, 1);
}
